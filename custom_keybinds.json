{
  "title": "Legacy keybinds",
  "rules": [
    {
      "description": "Emacs delete",
      "manipulators": [
        {
          "type": "basic",
          "from": {
            "key_code": "d",
            "modifiers": {
              "mandatory": [
                "control"
              ],
              "optional": [
                "caps_lock"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_forward"
            }
          ],
          "conditions": [
            {
              "type": "frontmost_application_unless",
              "bundle_identifiers": [
                "com\\.microsoft\\.VSCode",
                "com\\.googlecode\\.iterm2",
                "com\\.apple\\.Terminal"
              ]
            }
          ]
        }
      ]
    },
